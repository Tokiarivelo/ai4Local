# Variables d'environnement pour l'application web Next.js 15
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Next.js
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# API endpoints
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql

# Authentication
NEXTAUTH_SECRET=ai4local-nextauth-secret-dev
NEXTAUTH_URL=http://localhost:3000

# External APIs
NEXT_PUBLIC_OPENAI_API_KEY=
NEXT_PUBLIC_DALL_E_API_KEY=

# Mobile Money APIs (pour tests)
NEXT_PUBLIC_ORANGE_MONEY_API_KEY=
NEXT_PUBLIC_AIRTEL_MONEY_API_KEY=
NEXT_PUBLIC_TELMA_MONEY_API_KEY=

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Feature flags
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Localisation
NEXT_PUBLIC_DEFAULT_LOCALE=fr
NEXT_PUBLIC_SUPPORTED_LOCALES=fr,mg

# Performance
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_COMPRESSION_LEVEL=6